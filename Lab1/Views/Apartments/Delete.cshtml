@model Lab1.Models.Apartments

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить данную запись?</h3>
<div>
    <h4>Номера</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Номер")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>

        <dt>
            @Html.DisplayName("Цена за сутки")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayName("Тип номера")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApartmentType.Type)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
