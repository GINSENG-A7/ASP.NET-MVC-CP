@model IEnumerable<Lab1.Models.Living>

@{
    ViewBag.Title = "Index";
}

<h2>Проживания</h2>

<p>
    @*@Html.ActionLink("Добавить", "Create") |*@
    @Html.ActionLink("Составить отчёт за месяц", "ExelCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Имя")
        </th>
        <th>
            @Html.DisplayName("Фамилия")
        </th>
        <th>
            @Html.DisplayName("Отчество")
        </th>
        <th>
            @Html.DisplayName("Количество гостей")
        </th>
        <th>
            @Html.DisplayName("Количество детей")
        </th>
        <th>
            @Html.DisplayName("Дата заселения")
        </th>
        <th>
            @Html.DisplayName("Дата выселения")
        </th>
        <th>
            @Html.DisplayName("Номер")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueOfGuests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueOfKids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Settling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eviction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartments.Number)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Просмотреть", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
