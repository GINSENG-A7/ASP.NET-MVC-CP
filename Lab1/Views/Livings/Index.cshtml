@model IEnumerable<Lab1.Models.Living>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Составить отчёт за месяц", "ExelCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueOfGuests)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueOfKids)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Settling)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eviction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apartments.Number)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueOfGuests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueOfKids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Settling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eviction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartments.Number)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
