@model IEnumerable<Lab1.Models.ServiceType>

@{
    ViewBag.Title = "Index";
}

<h2>Типы дополнительных услуг</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Тип дополнительной услуги")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @if(item.AditionServices.Count == 0)
            {
                @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
