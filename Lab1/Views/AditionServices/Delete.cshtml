@model Lab1.Models.AditionServices

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить данную запись?</h3>
<div>
    <h4>Дополнительные услуги</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Стоимость")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayName("Дата оказания услуги")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfService)
        </dd>

        <dt>
            @Html.DisplayName("Тип услуги")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceTypes.Type)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
